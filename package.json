{
  "name": "wait-until",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "start": "npm run watch",
    "postinstall": "npm run build",
    "build": "npm run build-ts",
    "test": "jest --coverage --forceExit",
    "test-watch": "jest --watch --coverage --verbose",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "serve": "node dist/index.js",
    "watch-node": "nodemon dist/index.js",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "debug": "npm run build && npm run watch-debug"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PierreRAFFA/wait-until.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/PierreRAFFA/wait-until/issues"
  },
  "homepage": "https://github.com/PierreRAFFA/wait-until#readme",
  "devDependencies": {
    "concurrently": "^5.0.2",
    "nodemon": "^2.0.2",
    "typescript": "^3.7.4"
  }
}
